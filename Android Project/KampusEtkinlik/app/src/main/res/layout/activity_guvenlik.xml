<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp"
    tools:context=".Activity.UserSettings.GuvenlikActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:text="GÜVENLİK"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#fff"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|top"
            android:orientation="vertical">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/logo"
                android:layout_marginTop="30dp"/>

            <Spinner
                android:id="@+id/guvenlikChangeSoru"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>
            <EditText
                android:id="@+id/guvenlikChangeCevap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="CEVAP"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>
            <EditText
                android:id="@+id/guvenlikChangesifre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="PAROLA"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:inputType="textPassword"/>

            <Button
                android:id="@+id/btnGuvenlikChange"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:text="DEĞİŞTİR"
                android:background="@drawable/buttonlayout"
                android:textColor="#fff"
                android:textStyle="bold"
                android:layout_height="40dp"/>

        </LinearLayout>


    </ScrollView>

</LinearLayout>